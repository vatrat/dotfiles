Config { font = "xft:Source Code Pro:size=10:medium:antialias=true"
        , bgColor = "#000000"
        , fgColor= "gray"
        , position = Top
        , commands = [  Run Cpu ["-t","cpu <total>%","-L","10","-H","75","--low","white","--normal","green","--high","red"] 10
                        , Run Memory ["-t","mem <usedratio>%", "-L","10","-H","70","--low","white","--normal","green","--high","red"] 10
                        , Run Date "%F" "date" 10
                        , Run Date "%H:%M:%S" "time" 10
                        , Run Com "/home/vatrat/.xmonad/.xmobar_volume.sh" [] "volume" 2
                        , Run Com "uname" ["-n"] "" 36000
                        , Run StdinReader
                        , Run Battery        [ "--template" , "bat <acstatus>"
                             , "--Low"      , "20"        -- units: %
                             , "--High"     , "90"        -- units: %
                             , "--low"      , "red"
                             , "--normal"   , "green"
                             , "--high"     , "#0099ff"

                             , "--" -- battery specific options
                                       -- discharging status
                                       , "-o"	, "<left>% <fc=#0099ff><timeleft></fc>"
                                       -- AC "on" status
                                       , "-O"	, "<left>% <fc=purple><timeleft></fc>"
                                       -- charged status
                                       , "-i"	, "<left>%"
                             ] 30
                        , Run DiskIO [("/", "<read> <write>")] [] 10
                        , Run Wireless "wlan0" [ "-t", "<essid> <qualitybar>"
                                                , "--low"      , "red"
                                                , "--normal"   , "blue"
                                                , "--high"     , "green" ] 10
                         ]
        , sepChar = "%"
        , alignSep = "}{"
        , template = " %StdinReader% | %date% <fc=#0099ff>%uname%</fc> }{ %wlan0wi% | %battery% | %cpu% %memory% io <fc=blue>%diskio%</fc> <fc=#0099ff>%volume%</fc> %time% "
  , hideOnStart = False
	, lowerOnStart = True
	, allDesktops = True
	, overrideRedirect = False
  , persistent = True
        }

