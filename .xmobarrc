Config { font = "7x13" --"-Misc-Fixed-Medium-R-Normal--7-70-75-75-C-50-ISO10646-1"
        , bgColor = "#000000"
        , fgColor= "gray"
        , position = Top
        , commands = [  Run Cpu ["-t","Cpu: <total>%","-L","3","-H","75","--normal","green","--high","red"] 10
                        , Run Memory ["-t","Mem: <usedratio>%", "-L","3","-H","70","--normal","green","--high","red"] 10
                        , Run Date "%a %F %H:%M:%S" "date" 10
                        , Run Com "/home/vatrat/.xmonad/.xmobar_volume.sh" [] "volume" 2
                        , Run Com "uname" ["-n"] "" 36000
                        , Run StdinReader
                        , Run Battery        [ "--template" , "Bat: <acstatus>"
                             , "--Low"      , "20"        -- units: %
                             , "--High"     , "70"        -- units: %
                             , "--low"      , "red"
                             , "--normal"   , "green"
                             , "--high"     , "white"

                             , "--" -- battery specific options
                                       -- discharging status
                                       , "-o"	, "<left>% <fc=#0099ff><timeleft></fc>"
                                       -- AC "on" status
                                       , "-O"	, "<fc=#dAA520>Charging</fc>"
                                       -- charged status
                                       , "-i"	, "<fc=#006000>Charged</fc>"
                             ] 50
                         ]
        , sepChar = "%"
        , alignSep = "}{"
        , template = " %StdinReader% | <fc=#0099ff>%uname%</fc> }{ %battery% | %cpu% | %memory% | <fc=#0099ff>%volume%</fc> | %date% "
  , hideOnStart = False
	, lowerOnStart = True
	, allDesktops = True
	, overrideRedirect = False
  , persistent = True
        }

